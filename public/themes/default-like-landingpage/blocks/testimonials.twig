<section class="py-12 bg-white sm:py-16 lg:py-20">
    <div class="px-4 mx-auto max-w-7xl sm:px-6 lg:px-8">
  

        <div class="max-w-xl mx-auto text-center">
            <h2 class="text-3xl font-bold leading-tight text-black  "> {{title[locale()]}} </h2>
            <p class="mt-4 text-base leading-relaxed text-gray-600"> {{subtitle[locale()]}} </p>
        </div>

        <div class="grid gap-12 md:gap-8 mx-auto mt-8  mt-16  grid-cols-1 md:grid-cols-2  ">
             
             
            {% for item in items %}
                <div>
                    <blockquote class="py-6 bg-gray-100 rounded-2xl px-7">
                        <p class="text-lg font-normal leading-relaxed text-gray-900 font-pj">“{{item.comment}}”</p>
                        <div class="flex items-center gap-x-2 mt-2">
                            <div class="font-bold">
                                {{item.rating}}
                            </div>
                            <div class="flex items-center gap-x-px">                            
                                {% for i in 1..item.rating %}
                                <svg class="w-5 h-5 text-amber-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                    <path
                                        d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"
                                    />
                                </svg>                    
                                {% endfor %}
                                {% if item.rating < 5 %}
                                    {% for i in 1..(5-item.rating) %}
                                    <svg class="w-5 h-5 text-gray-400/80" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                        <path
                                            d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"
                                        />
                                    </svg>                    
                                    {% endfor %}
                                {% endif %}
                            </div>
                        </div>
                    </blockquote>
                    <div class="flex items-center mt-5">
                        <img class="flex-shrink-0 object-cover rounded-full w-11 h-11" src="{{gravatar(item.email)}}" alt="" />
                        <div class="ms-2">
                            <p class="text-base font-bold text-gray-900 font-pj">{{item.name}}</p>
                            <p class="mt-0.5 font-pj text-sm text-gray-600 truncate">{{hideEmail(item.email)}}</p>
                        </div>
                    </div>
                </div>
                {% endfor %}    
                  
        </div>
    </div>
</section>
 