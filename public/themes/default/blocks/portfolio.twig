
<!-- Storefront Products Section -->
   <div class="px-5" x-data="{ selectedCategory: 'All', favorites: [], cart: [] }" dir="{{ locale() == 'ar' ? 'rtl' : 'ltr' }}">
    <h3 class="text-xl font-bold text-gray-900 mb-4 -mx-5 rtl:border-r-4 rtl:border-{{ option('primaryColor', 'primary') }}-800 ltr:border-l-[6px] ltr:border-{{ option('primaryColor', 'primary') }}-800 ps-4 py-3 bg-gray-50 w-full">{{title}}</h3>
    {# {% if subtitle %}
    <p class="text-gray-600 mb-6 text-sm leading-relaxed">{{subtitle}}</p>
    {% endif %} #}
        
    <!-- Products Grid -->
    <div class="grid grid-cols-2 gap-4 mt-5">
        
        {% for item in portfolio %}
        {% if item.active %}
        <div class="bg-white border border-gray-200 rounded-xl overflow-hidden relative">
            <!-- Product Image -->
            <div class="relative h-48">
                <img src="https://images.unsplash.com/photo-1515562141207-7a88fb7ce338?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=300&q=80" 
                        alt="Tennis Bracelet" 
                        class="w-full h-full object-cover">
            </div>
            
            <!-- Product Details -->
            <div class="p-3">
                <h4 class="font-semibold text-gray-900 mb-1">{{item.name}}</h4>
                <div class="text-lg font-bold text-gray-900">{{item.caption}}</div>
            </div>
        </div>
        {% endif %}
        {% endfor %}
    </div>
</div>
 