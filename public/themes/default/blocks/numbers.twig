<!-- Numbers/Statistics Section -->
 
<div class="pt-10 px-5">
    {% if title %}
    <h3 class="text-base font-bold text-gray-900 mb-2 -mx-5 rtl:border-r-4 rtl:border-{{ option('primaryColor', 'blue') }}-800 ltr:border-l-[6px] ltr:border-{{ option('primaryColor', 'blue') }}-800 ps-4 py-3 bg-gray-50 w-full">
        {{title}}
    </h3>
    {% endif %}
    
    {% if subtitle %}
    <p class="text-sm text-gray-600 mb-6 mt-2 text-center">{{subtitle}}</p>
    {% endif %}

    {% if items|length > 0 %}
    <div class="grid grid-cols-2 md:grid-cols-3 gap-4 md:gap-6 mt-6">
        {% for item in items %}
        {% if item.active %}
        <div class="relative bg-gradient-to-br from-white to-{{ option('primaryColor', 'blue') }}-50 rounded-xl p-4">
            <!-- Icon Container -->
            <div class="flex items-center justify-center mb-4">
                <div class="w-16 h-16 bg-gradient-to-br from-{{ option('primaryColor', 'blue') }}-100 to-{{ option('primaryColor', 'blue') }}-100 rounded-2xl flex items-center justify-center">
                    {% if item.icon %}
                    <span class="text-{{ option('primaryColor', 'blue') }}-700 text-2xl">{{icon(item.icon, 8)}}</span>
                    {% else %}
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8 text-{{ option('primaryColor', 'blue') }}-700" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                    </svg>
                    {% endif %}
                </div>
            </div>
            
            <!-- Number -->
            <div class="text-center mb-2">
                <div class="text-3xl md:text-4xl font-bold text-gray-900 mb-1">
                    {{item.number}}
                </div>
            </div>
            
            <!-- Title -->
            {% if item.title %}
            <div class="text-center">
                <p class="text-sm font-medium text-gray-700 leading-relaxed line-clamp-2">
                    {{item.title}}
                </p>
            </div>
            {% endif %}
        </div>
        {% endif %}
        {% endfor %}
    </div>
    {% endif %}
</div>
 

