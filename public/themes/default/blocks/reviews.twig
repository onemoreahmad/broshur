
          
           
            <!-- Client Testimonials Section -->
            <div class="mt-6 px-5 pt-6" x-data="{ currentSlide: 0, testimonials: {{reviews|json_encode}} }">


            <!-- Testimonials Slider -->
            <div class="relative">

                <div class="flex items-center justify-between mb-6">
                    {# <h3 class="text-lg font-bold text-gray-900 "> قالوا عنا </h3> #}
                    <h3 class="text-xl font-bold text-gray-900 -mx-5 rtl:border-r-4 rtl:border-{{ option('primaryColor', 'primary') }}-800 ltr:border-l-[6px] ltr:border-{{ option('primaryColor', 'primary') }}-800 ps-4"> قالوا عنا</h3>

                    <!-- Navigation Arrows -->
                    <div class="flex justify-end gap-1">
                        <button 
                            @click="currentSlide = currentSlide > 0 ? currentSlide - 1 : testimonials.length - 1"
                            class="size-8 bg-white border border-{{ options.primaryColor ?? 'primary' }}-600 rounded-md flex items-center justify-center hover:bg-gray-50 transition-colors"
                        >
                            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-{{ options.primaryColor ?? 'primary' }}-600 rtl:rotate-180" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 19.5L8.25 12l7.5-7.5" />
                            </svg>
                        </button>
                        
                        <button 
                            @click="currentSlide = currentSlide < testimonials.length - 1 ? currentSlide + 1 : 0"
                            class="size-8 bg-{{ options.primaryColor ?? 'primary' }}-600 border border-{{ options.primaryColor ?? 'primary' }}-600 rounded-md flex items-center justify-center hover:bg-{{ options.primaryColor ?? 'primary' }}-700 transition-colors"
                        >
                            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-white rtl:rotate-180" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5" />
                            </svg>
                        </button>
                    </div>
                </div>
                
                <!-- Testimonial Container -->
                <div class="overflow-hidden">
                    <div 
                        class="flex transition-transform duration-300 ease-in-out"
                        :class="'{{ locale() == 'ar' ? 'flex-row-reverse' }}'"
                        :style="`transform: translateX(-${currentSlide * 100}%)`"
                    >
                        <template x-for="(testimonial, index) in testimonials" :key="index">
                            <div class="w-full flex-shrink-0">
                                <div class="bg-gray-50 rounded-2xl p-5">
                                    <!-- Quote Icon -->
                                    <div class="mb-4 flex items-center justify-between">
                                        <svg xmlns="http://www.w3.org/2000/svg"  fill="currentColor" class="bi bi-quote size-8 rtl:rotate-180" viewBox="0 0 16 16">
                                            <path d="M12 12a1 1 0 0 0 1-1V8.558a1 1 0 0 0-1-1h-1.388q0-.527.062-1.054.093-.558.31-.992t.559-.683q.34-.279.868-.279V3q-.868 0-1.52.372a3.3 3.3 0 0 0-1.085.992 4.9 4.9 0 0 0-.62 1.458A7.7 7.7 0 0 0 9 7.558V11a1 1 0 0 0 1 1zm-6 0a1 1 0 0 0 1-1V8.558a1 1 0 0 0-1-1H4.612q0-.527.062-1.054.094-.558.31-.992.217-.434.559-.683.34-.279.868-.279V3q-.868 0-1.52.372a3.3 3.3 0 0 0-1.085.992 4.9 4.9 0 0 0-.62 1.458A7.7 7.7 0 0 0 3 7.558V11a1 1 0 0 0 1 1z"/>
                                        </svg>
                                        
                                        <!-- Stars Rating -->
                                        <div class="flex items-center gap-1 mb-4">
                                            <template x-for="i in testimonial.score" :key="i">
                                                <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-yellow-500"  fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" d="M11.48 3.499a.562.562 0 011.04 0l2.125 5.111a.563.563 0 00.475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 00-.182.557l1.285 5.385a.562.562 0 01-.84.61l-4.725-2.885a.563.563 0 00-.586 0L6.982 20.54a.562.562 0 01-.84-.61l1.285-5.386a.562.562 0 00-.182-.557l-4.204-3.602a.563.563 0 01.321-.988l5.518-.442a.563.563 0 00.475-.345L11.48 3.5z" />
                                                </svg>
                                            </template>
                                            <template x-for="i in 5 - testimonial.score" :key="i">
                                                <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-gray-300"  fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" d="M11.48 3.499a.562.562 0 011.04 0l2.125 5.111a.563.563 0 00.475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 00-.182.557l1.285 5.385a.562.562 0 01-.84.61l-4.725-2.885a.563.563 0 00-.586 0L6.982 20.54a.562.562 0 01-.84-.61l1.285-5.386a.562.562 0 00-.182-.557l-4.204-3.602a.563.563 0 01.321-.988l5.518-.442a.563.563 0 00.475-.345L11.48 3.5z" />
                                                </svg>
                                            </template>
                                        </div>
                                    </div>
                                    
                                    <!-- Review Text -->
                                    <p class="text-gray-700 text-base leading-relaxed ms-4 mb-6 whitespace-pre-line" x-text="testimonial.review_text"></p>
                                    
                                     
                                    <!-- Client Info -->
                                    <div class="flex items-center gap-3">
                                        <!-- Avatar -->
                                        <div :class="`w-12 h-12 bg-gradient-to-br from-{{ options.primaryColor ?? 'primary' }}-400 to-{{ options.primaryColor ?? 'primary' }}-600 rounded-full flex items-center justify-center flex-shrink-0`">
                                            <span class="text-white font-bold text-lg" x-text="testimonial.client_email|first"></span>
                                        </div>
                                        
                                        <div>
                                            <!-- Customer Name -->
                                            <div class="text-gray-900 font-bold text-sm" x-text="testimonial.client_name"></div>
                                            <div class="text-gray-500 text-xs" x-text="testimonial.client_email"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </template>
                    </div>
    </div>
    
                <!-- Dots Indicator -->
                <div class="flex justify-center mt-8 gap-2">
                    <template x-for="(testimonial, index) in testimonials" :key="index">
                        <button 
                            @click="currentSlide = index"
                            :class="`w-2 h-2 rounded-full transition-colors ${currentSlide === index ? 'bg-{{ options.primaryColor ?? 'primary' }}-600' : 'bg-gray-300'}`"
                        ></button>
                    </template>
</div>
</div>
  
</div>

