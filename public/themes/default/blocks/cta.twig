
<!-- Action Buttons -->
<div class="flex items-center gap-x-2 p-4 bg-gray-100 mb-10">
    {% if whatsapp_enabled and whatsapp_number %}
    <a href="https://wa.me/{{whatsapp_number}}?text=السلام عليكم {{tenant('name')}}" target="_blank" class="w-full bg-white border-2 border-{{ option('primaryColor', 'primary') }}-700 text-{{ option('primaryColor', 'primary') }}-900 flex items-center gap-x-2 justify-center py-3 px-4 rounded-lg font-medium hover:bg-{{ option('primaryColor', 'primary') }}-700 hover:text-white transition-colors duration-200">
        <svg xmlns="http://www.w3.org/2000/svg" class="size-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.25" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-brand-whatsapp"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M3 21l1.65 -3.8a9 9 0 1 1 3.4 2.9l-5.05 .9" /><path d="M9 10a.5 .5 0 0 0 1 0v-1a.5 .5 0 0 0 -1 0v1a5 5 0 0 0 5 5h1a.5 .5 0 0 0 0 -1h-1a.5 .5 0 0 0 0 1" /></svg>
        ابدأ المحادثة    
    </a>
    {% endif %}

    {% if contact_enabled %}
    <a href="mailto:{{contact_email}}?subject={{contact_subject}}" class="w-full bg-{{ option('primaryColor', 'primary') }}-700 hover:bg-{{ option('primaryColor', 'primary') }}-800 flex items-center justify-center gap-x-2 border-2 border-transparent text-white py-3 px-4 rounded-lg font-medium transition-colors duration-200">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 1.5H8.25A2.25 2.25 0 0 0 6 3.75v16.5a2.25 2.25 0 0 0 2.25 2.25h7.5A2.25 2.25 0 0 0 18 20.25V3.75a2.25 2.25 0 0 0-2.25-2.25H13.5m-3 0V3h3V1.5m-3 0h3m-3 18.75h3" />
        </svg>
           اتصل بنا
    </a>
    {% endif %}
</div>