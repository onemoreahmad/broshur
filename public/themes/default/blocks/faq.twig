 <!-- FAQ Section -->
 <div  x-data="{ openItem: 1 }">
    {# <h3 class="text-lg font-bold text-gray-900 mb-3 px-5">الأسئلة المتكررة</h3> #}
    <h3 class="text-base font-bold text-gray-900 mb-6 rtl:border-r-4 rtl:border-{{ option('primaryColor', 'primary') }}-800 ltr:border-l-[6px] ltr:border-{{ option('primaryColor', 'primary') }}-800 ps-4  py-3 bg-gray-50 w-full"> الأسئلة المتكررة</h3>

    <div class="space-y-px divide-y divide-gray-200 divide-dashed">

        {% for item in faqs %}
        {% if item.active %}

        <!-- FAQ Item   -->
        <div class="">
            <button 
                @click="openItem = openItem === {{loop.index}} ? null : {{loop.index}}"
                class="w-full flex items-center justify-between p-4 px-6 hover:bg-gray-50 transition-colors"
            >
                <span class="font-medium text-gray-700 text-sm"> {{item.question}} </span>
                <svg 
                    class="w-5 h-5 text-gray-400 transition-transform duration-200"
                    :class="{ 'rotate-180 !text-gray-500': openItem === {{loop.index}} }"
                    fill="none" 
                    stroke="currentColor" 
                    viewBox="0 0 24 24"
                >
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                </svg>
            </button>
            <div 
                x-show="openItem === {{loop.index}}"
                class="p-4"
            >
                <p class="text-gray-600 text-sm leading-relaxed whitespace-pre-line">{{item.answer}}
                </p>
            </div>
        </div>
        {% endif %}
        {% endfor %}

      

        
    </div>
</div>
 
